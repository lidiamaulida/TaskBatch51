     <!-- form add project -->
        <h2 class="text-center mt-5 mb-3 fw-bold">UPDATE MY PROJECT</h2>
        <div class="row justify-content-center my-4">
        <div class="col-md-5">
            <form class="row g-3"
              method="post"
              action="/update-project"
            >
               <input type="hidden" name="id" value="{{data.id}}" />
                <div class="mb-3">
                    <label for="projectname" class="form-label fw-medium">Project Name</label>
                    <input type="text" class="form-control" id="projectname" name="title" aria-describedby="name" value="{{data.title}}">
                </div>
                <div class="col-md-6">
                    <label for="input-startDate" class="form-label fw-medium">Start Date</label>
                    <input type="date" class="form-control" name="StartDate" id="input-startDate" value="{{data.StartDate}}">
                </div>
                <div class="col-md-6">
                    <label for="input-endDate" class="form-label fw-medium">End Date</label>
                    <input type="date" class="form-control" name="endDate" id="input-endDate" value="{{data.endDate}}">
                </div>
                <div class="mb-3">
                    <label for="input-description" class="form-label fw-medium">Description</label>
                    <textarea class="form-control" id="input-description" name="description" rows="5" style="resize: none;">{{data.description}}</textarea>
                </div>
                <label for="" class="form-label fw-medium">Technologies</label>
                <div class="d-flex">
                    <div class="me-5">
                        <div class="form-check mb-3">
                            <input class="form-check-input" name="Nodejs" type="checkbox" value="Nodejs" {{#if this.data.technologies.Nodejs}}checked{{/if}} id="input-nodejs">
                            <label class="form-check-label" for="input-nodejs">
                            Node Js
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="Reactjs" type="checkbox" value="Reactjs" {{#if this.data.technologies.Reactjs}}checked{{/if}} id="input-reactjs">
                            <label class="form-check-label" for="input-reactjs">
                            React Js
                            </label>
                        </div>
                    </div>
                    <div class="ms-5">
                        <div class="form-check mb-3">
                            <input class="form-check-input" name="Nextjs" type="checkbox" value="Nextjs" {{#if this.data.technologies.Nextjs}}checked{{/if}} id="input-nextjs">
                            <label class="form-check-label" for="input-nextjs">
                            Next Js
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="Typescript" type="checkbox" value="Typescript" {{#if this.data.technologies.Typescript}}checked{{/if}} id="input-typescript">
                            <label class="form-check-label" for="input-typescript">
                            TypeScript
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="input-image" class="form-label fw-medium">Upload image</label>
                    <input type="file" class="form-control" name="upload-image" id="input-image">
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark rounded-5 ps-3 pe-3 ala">Submit</button>
                </div>
            </form>
        </div>
        </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
